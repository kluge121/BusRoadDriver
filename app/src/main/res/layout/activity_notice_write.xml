<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">

    <android.support.v7.widget.Toolbar
        android:id="@+id/noite_write_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/mainblue">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/notie_write_backkey"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:text="공지사항 작성"
                android:textAppearance="@style/ToolbarTextStyle" />


            <Button
                android:id="@+id/notice_register"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:text="확인"
                android:textColor="@color/white"
                android:textSize="17dp" />


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noite_write_toolbar">

        <EditText
            android:id="@+id/notice_write_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:hint="제목"
            android:inputType="textNoSuggestions"
            android:paddingLeft="20dp"
            android:textCursorDrawable="@color/mainblue"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/notice_write_title"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="글 내용"
            android:inputType="text|textMultiLine"
            android:maxLines="27"
            android:padding="20dp"
            android:textCursorDrawable="@color/mainblue" />

    </RelativeLayout>


</RelativeLayout>